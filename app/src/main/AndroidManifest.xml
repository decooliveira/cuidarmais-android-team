        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HospActivity"
            android:label="@string/title_activity_hosp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClientActivity"
            android:label="@string/title_activity_client"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PrescriptionActivity"
            android:label="@string/title_activity_prescription"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClientListActivity"
            android:label="@string/title_activity_client_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DeployActivity"
            android:label="@string/title_activity_deploy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MedicalCareActivity"
            android:label="@string/title_activity_medical_care"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FugulinActivity"
            android:label="@string/title_activity_fugulin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MorseActivity"
            android:label="@string/title_activity_morse"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MewsActivity"
            android:label="@string/title_activity_mews"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BradenActivity"
            android:label="@string/title_activity_braden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GlasgowActivity"
            android:label="@string/title_activity_glasgow"
            android:theme="@style/AppTheme.NoActionBar"></activity>
